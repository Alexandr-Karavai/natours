header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo' href='/')
  nav.nav.nav--user
    if user
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
      a.nav__el.nav__el--logout
        i.fa.fa-sign-out.fa-2x
    else
      a.nav__el(href='/login') Log in
        i.fa.fa-sign-in.fa-2x
